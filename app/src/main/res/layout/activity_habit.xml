<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_habit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kieter.habittracker.HabitActivity">


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:clickable="true"
        android:id="@+id/habitCompleteFAB"
        app:fabSize="normal"
        app:backgroundTint="@android:color/holo_green_light"
        android:src="@drawable/ic_checkmark"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/habitIncompleteFAB" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/habitIncompleteFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:fabSize="normal"
        app:backgroundTint="@android:color/holo_red_light"
        android:clickable="true"
        android:src="@drawable/cross_icon"
        android:layout_marginEnd="17dp"
        android:layout_above="@+id/habitCompleteFAB"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14dp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        android:text="Habit_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textAlignment="center"
        android:textSize="36sp"
        tools:textAlignment="gravity"
        tools:gravity="bottom|center"
        android:textColor="@color/cardview_light_background"
        android:textAllCaps="false" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:longClickable="true"
        android:id="@+id/listView"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView5" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_back"
        android:id="@+id/imageButton"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
